{
  "name": "custom-wordpress-theme-boilerplate",
  "version": "2.0.0",
  "description": "Wordpress theme development JavaScript dependencies",
  "author": "Nick Zou",
  "license": "ISC",
  "scripts": {
    "sass": "source .env && sass src/scss:$PUBLIC_DIR/wp-content/themes/$THEME/css --embed-source-map",
    "sass:prod": "source .env && sass src/scss:$PUBLIC_DIR/wp-content/themes/$THEME/css --no-source-map --style compressed",
    "sass:watch": "source .env && sass src/scss:$PUBLIC_DIR/wp-content/themes/$THEME/css --embed-source-map --watch",
    "tailwind": "source .env && npx tailwindcss -i ./src/tailwind/style.css -o ./$PUBLIC_DIR/wp-content/themes/$THEME/css/styles.css",
    "tailwind:prod": "source .env && npx tailwindcss -i ./src/tailwind/style.css -o ./$PUBLIC_DIR/wp-content/themes/$THEME/css/styles.css --minify",
    "tailwind:watch": "source .env && npx tailwindcss -i ./src/tailwind/style.css -o ./$PUBLIC_DIR/wp-content/themes/$THEME/css/styles.css --watch",
    "esbuild": "node esbuild.config.js",
    "esbuild:prod": "tsc -noEmit && source .env && npm run remove:js && node esbuild.prod.js",
    "esbuild:watch": "node esbuild.watch.js",
    "sharp": "node sharp.config.js",
    "sharp:clean": "npm run remove:images && npm run sharp",
    "development": "npm run sharp && npm run tailwind && npm run sass && npm run esbuild",
    "production": "npm run sharp:clean && npm run tailwind:prod && npm run remove:js && npm run sass:prod && npm run esbuild:prod",
    "remove:js": "source .env && rm -r -f $PUBLIC_DIR/wp-content/themes/$THEME/js/*",
    "remove:images": "source .env && rm -r -f $PUBLIC_DIR/wp-content/themes/$THEME/images/*",
    "watch": "source .env && npm run sharp:clean && npm run remove:js && concurrently \"npm run tailwind:watch\" \"npm run esbuild:watch\" \"npm run sass:watch\" \"browser-sync start --proxy '$SITE_URL' --files '$PUBLIC_DIR' --watch\""
  },
  "devDependencies": {
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "browser-sync": "^2.27.10",
    "browserslist": "^4.21.4",
    "clear-folder": "^3.2.1",
    "cli-color": "^2.0.3",
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.13",
    "esbuild-plugin-browserslist": "^0.5.2",
    "glob": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.55.0",
    "sharp": "^0.31.2",
    "tailwindcss": "^3.2.2",
    "typescript": "^4.6.4",
    "vite": "^3.2.3"
  }
}
